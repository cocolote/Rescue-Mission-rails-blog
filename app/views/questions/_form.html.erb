<% if @question.errors.present? %>
  <div id='errors'>
    <ul>
      <% @question.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @question do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <%= f.hidden_field :user_id, value: current_user.to_param %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
