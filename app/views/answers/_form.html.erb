<% if @answer.errors.present? %>
  <div id='errors'>
    <ul>
      <% @answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @answer do |f| %>
  <div class="field">
    <%= f.text_area :body %>
    <%= f.hidden_field :user_id, value: current_user.to_param %>
    <%= f.hidden_field :question_id, value: @question.to_param %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
